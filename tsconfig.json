{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "esnext",
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "./lib",
    "jsx": "react",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": ["src/**/*"]
}
